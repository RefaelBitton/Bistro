<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="520.0" prefWidth="620.0"
            xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="boundry.OrderScreenController">

    <children>
        <VBox spacing="14"
              AnchorPane.topAnchor="18"
              AnchorPane.bottomAnchor="18"
              AnchorPane.leftAnchor="18"
              AnchorPane.rightAnchor="18">

            <Label text="Order" alignment="CENTER"
                   maxWidth="1.7976931348623157E308"
                   style="-fx-font-size: 28px; -fx-font-weight: bold;" />

            <!-- INPUTS -->
            <VBox spacing="10">
                <HBox spacing="10">
                    <Label minWidth="160" text="Date:" />
                    <DatePicker fx:id="orderDatePicker" />
                </HBox>

                <HBox spacing="10">
                    <Label minWidth="160" text="Hour:" />
                    <ComboBox fx:id="timeComboBox" prefWidth="150" promptText="Select time" />
                </HBox>

                <HBox spacing="10">
                    <Label minWidth="160" text="Guests:" />
                    <ComboBox fx:id="guestsComboBox" prefWidth="150" promptText="Select guests" />
                </HBox>

                <!-- Guest Contact (hidden for subscribers via binding in controller) -->
                <HBox fx:id="contactBox" spacing="10">
                    <Label minWidth="160" text="Contact (phone or email):" />
                    <TextField fx:id="contactTxt" promptText="Enter phone OR email" prefWidth="250" />
                </HBox>
            </VBox>

            <Separator />

            <!-- RESULT -->
            <Label text="Result" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
            <TextArea fx:id="resultTxt" editable="false" wrapText="true" prefHeight="140" />

            <!-- BUTTONS -->
            <HBox spacing="12" alignment="CENTER_RIGHT">
                <Button fx:id="cancelBtn" text="Back" onAction="#onCancelClick" />
                <Button fx:id="OrderBtn" text="Order" onAction="#OnOrderClick" />
            </HBox>

        </VBox>
    </children>
</AnchorPane>
