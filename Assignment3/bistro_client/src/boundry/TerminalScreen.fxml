<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="450.0" prefWidth="600.0" spacing="15" style="-fx-padding: 20;" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="boundry.TerminalScreenController">
    <children>
        <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Bistro Restaurant Terminal" />
        
        <Separator />
        
        <Label style="-fx-font-weight: bold;" text="1. New Walk-in" />
        <HBox alignment="CENTER_LEFT" spacing="10">
            <Label minWidth="60" text="Guests:" />
            <TextField fx:id="guestsNumTxt" promptText="Num of people" />
            <Button onAction="#onJoinWaitlistClick" text="Join Waitlist" />
        </HBox>
        
        <Separator />
        
        <Label style="-fx-font-weight: bold;" text="2. Manage My Spot" />
        <HBox alignment="CENTER_LEFT" spacing="10">
            <Label minWidth="60" text="ID/Code:" />
            <TextField fx:id="orderNumTxt" promptText="Order # or Conf Code" /> 
            <Button onAction="#onIdentifyClick" text="Identify / Get Table" />
            <Button onAction="#onCancelWaitlistClick" text="Cancel Wait" />
        </HBox>
        
        <HBox alignment="CENTER_LEFT" spacing="10">
            <Label minWidth="60" text="Action:" />
            <Button onAction="#onPayClick" style="-fx-background-color: #90EE90; -fx-font-weight: bold;" text="Pay &amp; Clear Table" />
        </HBox>
        
        <Separator />
        
        <Label text="Terminal Status:" />
        <TextArea fx:id="terminalStatus" editable="false" prefHeight="120.0" wrapText="true" />
        <Button fx:id="backBtn" layoutX="219.0" layoutY="352.0" mnemonicParsing="false" onAction="#OnBackBtnClick" text="Back to Home Screen" />
    </children>
    
</VBox>