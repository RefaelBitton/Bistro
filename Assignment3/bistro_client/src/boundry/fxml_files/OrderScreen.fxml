<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="650.0" prefWidth="600.0" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="boundry.OrderScreenController">
    <children>
      <Text layoutX="50.0" layoutY="60.0" styleClass="title-text" text="Reserve a Spot" />
      
      <Pane layoutX="50.0" layoutY="90.0" prefHeight="520.0" prefWidth="500.0" styleClass="card-pane">
         <children>
              <VBox layoutX="40.0" layoutY="30.0" spacing="20.0">
                  <VBox spacing="5">
                      <Label text="Date" />
                      <DatePicker fx:id="orderDatePicker" prefWidth="420.0" />
                  </VBox>
  
                  <VBox spacing="5">
                      <Label text="Time" />
                      <ComboBox fx:id="timeComboBox" prefWidth="420.0" promptText="Select time" />
                  </VBox>
  
                  <VBox spacing="5">
                      <Label text="Number of Guests" />
                      <ComboBox fx:id="guestsComboBox" prefWidth="420.0" promptText="Select guests" />
                  </VBox>
  
                  <HBox fx:id="contactBox" alignment="CENTER_LEFT" spacing="10" prefWidth="420.0">
                      <Label text="Contact Details:" minWidth="100"/>
                      <TextField fx:id="contactTxt" prefWidth="310.0" promptText="Phone Number or Email" />
                  </HBox>
                  
                  <Button fx:id="OrderBtn" onAction="#OnOrderClick" prefWidth="420.0" text="Check Availability &amp; Book" />

                  <Label text="System Response:" />
                  <TextArea fx:id="resultTxt" editable="false" prefHeight="80.0" prefWidth="420.0" wrapText="true" style="-fx-control-inner-background: #f3f4f6;" />
              </VBox>
         </children>
      </Pane>
      
      <Button fx:id="backBtn" layoutX="50.0" layoutY="620.0" onAction="#onBackClick" styleClass="button-secondary" style="-fx-text-fill: white; -fx-border-color: white;" text="Back" />

    </children>
</AnchorPane>