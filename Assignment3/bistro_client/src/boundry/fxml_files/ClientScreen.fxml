<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="500.0" prefWidth="700.0" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="boundry.ClientScreenController">
   <children>
      <Text layoutX="50.0" layoutY="60.0" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="title-text" text="My Dashboard" />
      <Text layoutX="50.0" layoutY="85.0" styleClass="label-light" text="Manage your account and orders" />

      <Pane layoutX="50.0" layoutY="110.0" prefHeight="300.0" prefWidth="600.0" styleClass="card-pane">
         <children>
            <VBox layoutX="40.0" layoutY="30.0" spacing="15.0">
               <Label styleClass="card-title" text="Actions" />
               
               <Button fx:id="orderManagementBtn" mnemonicParsing="false" onAction="#onOrderManagementClick" prefWidth="250.0" text="New Order" />
               <Button fx:id="orderHistoryBtn" mnemonicParsing="false" onAction="#onOrderHistoryClick" prefWidth="250.0" styleClass="button-secondary" text="View My Order History" />
               <Button fx:id="waitingListBtn" mnemonicParsing="false" onAction="#onWaitingListClick" prefWidth="250.0" styleClass="button-secondary" text="Check Waiting List Queue" />
               <Button fx:id="changeDetailsBtn" mnemonicParsing="false" onAction="#onChangeDetailsClick" prefWidth="250.0" styleClass="button-secondary" text="Update My Details" />
            </VBox>
         </children>
      </Pane>

      <Button fx:id="logOutBtn" layoutX="50.0" layoutY="430.0" mnemonicParsing="false" onAction="#onLogOutBtnClick" style="-fx-background-color: #e53e3e; -fx-text-fill: white;" text="Log Out" />
   </children>
</AnchorPane>